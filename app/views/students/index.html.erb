<p id="notice"><%= notice %></p>
<h1 style="text-align: center">Students for <%= @course.name %></h1>
<br>
<br>
<% if @students.empty? %>
    <h3 style="text-align: center"> No students posted </h3>
<% else %>
<table class="table table-striped" style="width: 50%; margin: auto">
  <thead>
    <tr>
      <th> First Name </th>
      <th> Last Name </th>
      <th> DNI </th>
      <th> Legajo </th>
      <th> Mail </th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <th> <%= student.firstName %></th>
        <th> <%= student.lastName %></th>
        <th> <%= student.dni %></th>
        <th> <%= student.legajo %></th>
        <th> <%= student.mail %></th>
        <th><%= link_to 'Edit', edit_course_student_path(@course, student) %> |
          <%= link_to 'Destroy', course_students_path(@course, student), method: :delete, data: { confirm: 'Are you sure?' } %> | 
          <%= link_to 'View exams', course_student_exams_path(@course, student, @exams)%>
        </th>

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<br>
<br>

<%= link_to 'New Student', new_course_student_path(@course) %> |
<%= link_to 'Back', course_path(@course.id) %>
