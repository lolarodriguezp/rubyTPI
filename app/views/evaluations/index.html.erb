<p id="notice"><%= notice %></p>
<h1 style="text-align: center">Evaluations</h1>
<br>
<br>
<% if @evaluations.empty? %>
    <h3 style="text-align: center"> No evaluations posted </h3>
<% else %>
<table class="table table-striped" style="width: 50%; margin: auto">
  <thead>
    <tr>
      <th> Title </th>
      <th> Date </th>
      <th> Minimus note of aprobation </th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <th> <%= evaluation.title %></th>
        <th> <%= evaluation.date %></th>
        <th> <%= evaluation.minNote %></th>
        <th><%= link_to 'Edit', edit_course_evaluation_path(@course, evaluation) %>
          <br> 
          <%= link_to 'Destroy', course_evaluations_path(@course, evaluation), method: :delete, data: { confirm: 'Are you sure?' } %>
        </th>

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<br>
<br>

<%= link_to 'New Evaluation', new_course_evaluation_path(@course) %> |
<%= link_to 'Back', course_path(@course.id) %>
